@model IEnumerable<Factory.Evento>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div style=" padding:10px;">
    @using (Html.BeginForm("Index", "reportes", FormMethod.Get))
    {
        <div class="form-group">
            <label class=" control-label col-md-2">Fecha inicio </label>
            <div class="col-md-10">
                <input type="datetime" name="fechainicio" class=" form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class=" control-label col-md-2">Fecha fin </label>
            <div class="col-md-10">
                <input type="datetime" name="fechafin" class=" form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Buscar" class="btn btn-primary " />
            </div>
        </div>
    }
</div>
<br />
<div style=" padding:10px">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadPersonas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaEvento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Identificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Motivo)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CantidadPersonas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observaciones)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.ActionLink("Exportar a pdf", "Export", new { id = item.Id }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }

    </table>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
    $('input[type=datetime]').datepicker({
        dateFormat: "dd/MM/yy",
        changeMonth: true,
        changeYear: true,
        yearRange: "-60:+0"
    });
    </script>

}
